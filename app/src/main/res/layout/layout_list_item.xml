<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintHeight_max="300dp"
    android:id="@+id/list_item"
    android:layout_margin="@dimen/fabMarginEnd" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/list_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/list_image"
            android:id="@+id/list_name"
            android:textStyle="bold"
            android:textSize="@dimen/nameFontSize"
            android:textColor="@color/colorPrimaryDark"
            android:padding="@dimen/layoutViewPadding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/list_name"
            android:id="@+id/list_country"
            android:textSize="@dimen/layoutFontSize"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/layoutViewPadding"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>